{
   "$schema":"http://json-schema.org/draft-04/schema#",
   "id":"http://api.dataplatform.ibm.com/schemas/common-pipeline/parameters/parameters-v3-schema.json",
   "title":"Watson Data Platform Pipeline Parameters Schema",
   "description":"Parameters schema for pipelines in the Watson Data Platform",
   "type": "object",
   "properties": {
     "json_schema": {
       "description": "Refers to the JSON schema used to validate documents of this type",
       "enum": [
         "http://api.dataplatform.ibm.com/schemas/common-pipeline/parameters/parameters-v3-schema.json"
       ]
     },
     "parameters": {
       "type": "array",
       "minItems": 0,
       "items": {
         "$ref": "#/definitions/param_property_def"
       },
       "uniqueItems": true
     }
   },
   "required": [
     "parameters"
   ],
   "definitions":{
      "param_property_def": {
         "description": "The parameter definition.",
         "properties": {
            "name": {
               "description": "The name of the parameter.",
               "type": "string"
            },
            "description": {
               "description": "The description of the parameter.",
               "type": "string"
            },
            "type_code": {
               "description": "The parameter type.",
               "enum": [
                  "string",
                  "encrypted",
                  "int64",
                  "sfloat",
                  "json_object",
                  "json_array",
                  "path",
                  "enum",
                  "date",
                  "time",
                  "timestamp",
                  "asset_id",
                  "envvar"
               ]
            },
            "subtype": {
               "description": "Subtype of this parameter only if type_code in {asset_id, envvar}.",
               "type": "string"
            },
            "value": {
               "description": "The literal default value to replace at runtime.",
               "type": "object"
            },
            "valid_values": {
               "description": "Valid values only present for type_codes {enum, envvar}.",
               "type": "object"
            }
         },
         "required": [
            "name",
            "type_code"
         ],
         "type": "object"
      }
   }
}
